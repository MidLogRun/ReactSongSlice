<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
     <h1 class="text-centered">Albums</h1>
  <div class="event-card" style="border: 2px solid #000; padding: 10px; margin: 10px; height: 450px; width: 400px; ">
    <% if (image) { %>
           <h2 class="text-centered"><%= artist %> </h2>
          <h2><%= albumName %></h2>
          <img src="<%= image %>" alt="<%= albumName %> Image" class="card-img">

  </div>
    <!-- Tracklist: -->
  <div class="event-card">
    <h2>Tracklist:</h2>
      <% tracks.items.forEach(function(track) { %>
        <li>
          <p><%= track.name%></p>
        </li>
        <%});%>
  </div>

    <!-- Other album information -->

<% } else { %>
  <p>No album available</p>
<% } %>


  </div>
  <br>
    <div class="btn-group" role="group" aria-label="Basic example">
      <button type="button" class="btn btn-secondary">1</button>
      <button type="button" class="btn btn-secondary">2</button>
      <button type="button" class="btn btn-secondary">3</button>
      <button type="button" class="btn btn-secondary">4</button>
      <button type="button" class="btn btn-secondary">5</button>
    </div>
  </br>
</main>


<%- include ('../partials/footer') %>
