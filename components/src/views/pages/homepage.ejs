<!--  backend provides the arrays: IDs, images, names, and artists -->

<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
  <h1 class="text-centered">Homepage</h1>

    <div id="albumCarousel" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
        <% IDs.forEach((albumID, index) => { %>
            <li data-bs-target="#albumCarousel" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"><%= index%></li>
        <% }); %>
        </ol>

        <div class="carousel-inner">
        <% IDs.forEach((albumID, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <a href="/release/<%= albumID %>">
                    <img src="<%= images[index] %>" class="d-block w-100" alt="<%= names[index] %> Image">
                    <div class="carousel-caption d-none d-md-block">
                        <h2><%= names[index] %></h5>
                        <p><%= artists[index] %></p>
                        <p>Album ID: <%= albumID %></p>
                    </div>
                </a>
            </div>
      <% }); %>
    </div>

        <a class="carousel-control-prev" href="#albumCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#albumCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</main>




<%- include ('../partials/footer') %>


