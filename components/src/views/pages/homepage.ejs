<!--  backend provides the arrays: IDs, images, names, and artists -->

<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
  <h1 class="text-centered">Homepage</h1>

  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">

    <div class="carousel-inner">
      <% IDs.forEach((albumID, index) => { %>
        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
          <a href="/release/<%= albumID %>">
            <img src="<%= images[index] %>" class="d-block w-100" alt="<%= names[index] %> Image">
            <div class="carousel-caption d-none d-md-block">
              <h5><%= names[index] %></h5>
              <p><%= artists[index] %></p>
              <p>Album ID: <%= albumID %></p>
            </div>
          </a>
        </div>
      <% }); %>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</main>

<%- include ('../partials/footer') %>
